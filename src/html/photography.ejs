<!DOCTYPE html>
<html lang="en"
      style="--bs-body-color: rgba(255, 255, 255, 0.6); --bs-body-bg: black; --bs-active-color: white;">
<%- include("components/_head.ejs") %>
<body id="page-top">
<%- include("components/_embedded_svgs.ejs") %>
<%- include("components/_nav.ejs") %>
<%- include("components/_masthead.ejs") %>

<!-- Camera and Editor -->
<div class="container pt-5 text-center camera-info-text">
    <div class="row pt-3 justify-content-center">
        <div class="col-md-6 py-4 d-flex align-items-center justify-content-center align-content-around">
            <div>
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="camera-info-icon" viewBox="0 0 16 16">
                    <path d="M15 12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1h1.172a3 3 0 0 0 2.12-.879l.83-.828A1 1 0 0 1 6.827 3h2.344a1 1 0 0 1 .707.293l.828.828A3 3 0 0 0 12.828 5H14a1 1 0 0 1 1 1v6zM2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2z"/>
                    <path d="M8 11a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5zm0 1a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7zM3 6.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"/>
                </svg>
            </div>
            <div class="ps-4">Canon&nbsp;EOS&nbsp;700D, iPhone&nbsp;Xs</div>
        </div>
        <div class="col-md-6 py-4 d-flex align-items-center justify-content-center align-content-around">
            <div>
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="camera-info-icon" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.5 2a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM9.05 3a2.5 2.5 0 0 1 4.9 0H16v1h-2.05a2.5 2.5 0 0 1-4.9 0H0V3h9.05zM4.5 7a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM2.05 8a2.5 2.5 0 0 1 4.9 0H16v1H6.95a2.5 2.5 0 0 1-4.9 0H0V8h2.05zm9.45 4a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zm-2.45 1a2.5 2.5 0 0 1 4.9 0H16v1h-2.05a2.5 2.5 0 0 1-4.9 0H0v-1h9.05z"/>
                </svg>
            </div>
            <div class="ps-4">Adobe Lightroom Classic</div>
        </div>
    </div>
</div>

<section class="gallery-block compact-gallery">
    <div class="row g-0">
        <% sections.forEach(function(section) { %>
            <% let imageCount = section.additionalPhotos.length + 1; %>
            <div class="col-md-6 col-lg-4 item zoom-on-hover">
                <a class="lightbox" href="<%- section.coverImage %>" data-section="<%- section.heading %> &bull; 1/<%= imageCount %>" data-caption="<%- section.coverText %>">
                    <img class="img-fluid image thumbnail" data-src="<%- section.coverThumbnail %>">
                    <div class="description">
                        <span class="description-heading"><%- section.heading %></span>
                        <!-- <span class="description-body"></span> -->
                    </div>
                </a>
                <div style="display: none">
                    <% for (let i = 0; i < section.additionalPhotos.length; i++) { %>
                        <% let photo = section.additionalPhotos[i]; %>
                        <a class="lightbox" href="<%- photo.image %>" data-section="<%- section.heading %> &bull; <%= i + 2 %>/<%= imageCount %>" data-caption="<%- photo.text %>"></a>
                    <% } %>
                </div>
            </div>
        <% }); %>
    </div>
</section>

<!-- Final words -->
<div class="container pt-5 px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
    <div class="d-flex justify-content-center">
        <div class="masthead-text text-center">
            <p class="mx-auto mt-1 mb-0">The next destination awaits.</p>
        </div>
    </div>
</div>

<!-- Contact-->
<section class="contact-section contact-section-dark">
    <div class="container px-4 px-lg-5">
        <div class="social d-flex justify-content-center">
            <a class="mx-2 " href="mailto: zikai.liu@outlook.com" aria-label="Email me">
                <svg width="1.5em" height="1.5em">
                    <use xlink:href="#bi-envelope"></use>
                </svg>
            </a>
            <a class="mx-2 " target="_blank" rel="noopener noreferrer"
               href="https://www.linkedin.com/in/zikai-liu/" aria-label="Visit my LinkedIn">
                <svg width="1.5em" height="1.5em">
                    <use xlink:href="#bi-linkedin"></use>
                </svg>
            </a>
            <a class="mx-2 " target="_blank" rel="noopener noreferrer"
               href="https://github.com/liuzikai" aria-label="Visit my GitHub">
                <svg width="1.5em" height="1.5em">
                    <use xlink:href="#bi-github"></use>
                </svg>
            </a>
        </div>
    </div>
</section>

<!-- Footer-->
<footer class="footer bg-black small text-center text-white-50">
    <div class="container px-4 px-lg-5">Zikai Liu &copy; 2023&ndash;2024</div>
    <div class="container px-4 px-lg-5 py-4">
        <a class="text-white-50 " target="_blank" rel="noopener noreferrer"
           href="https://github.com/liuzikai/liuzik.ai" aria-label="Visit the GitHub repository of this website">
            Nuts and bolts about this website on
            <span style="white-space: nowrap">
            <svg width="1em" height="1em" style="position: relative; top: -0.15em">
                <use xlink:href="#bi-github"></use>
            </svg>
            GitHub
            <svg width="1em" height="1em" style="position: relative; top: -0.15em">
                <use xlink:href="#bi-chevron-right"></use>
            </svg>
            </span>
        </a>
    </div>
</footer>
<!-- Core JS with Bootstrap components needed -->
<script id="main-script" src="/js/scripts.min.js" data-page="photography"></script>
</body>
</html>
